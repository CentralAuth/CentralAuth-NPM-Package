{
  "compilerOptions": {
    "module": "es2015",
    "target": "es2015",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./",
    "rootDirs": [
      "./src",
      "./api",
      "./"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "declaration": true
  },
  "include": [
    "src/*.tsx",
    "api/*.ts",
    "./*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}